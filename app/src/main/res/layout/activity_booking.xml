<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/colorSejjoh"
    android:layout_height="match_parent"
    tools:context=".BookingActivity">
    <com.shuhart.stepview.StepView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/step_View"
        android:padding="16dp"
        app:sv_animationType="None"
        app:sv_stepPadding="12dp"

        app:sv_selectedCircleColor="@color/colorSejjoh"
        app:sv_selectedStepNumberColor="@color/white"
        app:sv_selectedTextColor="@color/fbutton_color_nephritis"

        app:sv_doneCircleColor="@color/fbutton_color_clouds"
        app:sv_doneStepLineColor="@color/white"
        app:sv_doneStepMarkColor="@color/colorAccent"

        app:sv_typeface="@font/bellerose"
         />
    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_below="@+id/step_View"
        android:layout_above="@+id/layout_button"
        android:layout_height="match_parent">

    </android.support.v4.view.ViewPager>
    <LinearLayout
        android:id="@+id/layout_button"
        android:weightSum="2"
        android:padding="4dp"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:id="@+id/txt_previous"
            android:layout_centerHorizontal="true"
            android:text="Previous"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/bellerose"
            android:background="@color/colorJoseh"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />
        <Button
            android:id="@+id/txt_next"
            android:layout_centerHorizontal="true"
            android:text="Next"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"
            android:fontFamily="@font/bellerose"
            android:background="@color/colorJoseh"
            android:textColor="@color/colorBlack"
            android:layout_width="0dp"
            android:layout_height="wrap_content" />

    </LinearLayout>


</RelativeLayout>